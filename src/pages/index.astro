---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/SearchBar.astro';
import SectionTitle from '../components/SectionTitle.astro';
import BookCard from '../components/BookCard.astro';
import VideoCard from '../components/VideoCard.astro';
import AudioCard from '../components/AudioCard.astro';

import booksData from '../data/books.json';
import videosData from '../data/videos.json';
import audioData from '../data/audio.json';
import scholarsData from '../data/scholars.json';

// Stats from JSON data
const stats = [
  { labelAr: 'كتاب', labelTi: 'መጽሓፍ', count: booksData.books.length, icon: 'book' },
  { labelAr: 'فيديو', labelTi: 'ቪድዮ', count: videosData.videos.length, icon: 'video' },
  { labelAr: 'صوتي', labelTi: 'ዝስማዕ', count: audioData.items.length, icon: 'audio' },
  { labelAr: 'عالم', labelTi: 'ዓሊም', count: videosData.scholars.length, icon: 'scholar' },
];

// Featured items from JSON (first 2-3 of each)
const featuredBooks = booksData.books.slice(0, 2);
const featuredVideos = videosData.videos.slice(0, 3).map(v => ({ ...v, duration: '' }));
const featuredAudio = audioData.items.slice(0, 2);

// Main navigation sections
const sections = [
  {
    href: '/books',
    titleAr: 'الكتب',
    titleEn: 'Books',
    titleTi: 'መጻሕፍቲ',
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>`,
  },
  {
    href: '/videos',
    titleAr: 'الفيديوهات',
    titleEn: 'Videos',
    titleTi: 'ቪድዮታት',
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>`,
  },
  {
    href: '/audio',
    titleAr: 'الصوتيات',
    titleEn: 'Audio',
    titleTi: 'ዝስማዕ',
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" /></svg>`,
  },
  {
    href: '/scholars',
    titleAr: 'سيرة العلماء',
    titleEn: 'Scholars History',
    titleTi: 'ታሪኽ መሻይኽ',
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
  },
];
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero-gradient text-white py-20 md:py-28">
    <div class="container text-center">
      <!-- Bismillah -->
      <p class="text-2xl md:text-3xl mb-6 opacity-90 font-amiri">بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ</p>

      <!-- Title -->
      <div class="trilingual-title items-center mb-6">
        <h1 class="ar text-4xl md:text-6xl font-bold text-white mb-1 font-amiri">المنصة الإسلامية</h1>
        <p class="en text-2xl md:text-3xl text-accent font-semibold mb-1">Islamic Platform</p>
        <p class="ti text-xl md:text-2xl text-white/80 font-ethiopic">ኢስላሚያ መድረኽ</p>
      </div>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl mb-2 opacity-90 max-w-2xl mx-auto">
        منصة إسلامية تعليمية - كتب، فيديوهات، صوتيات
      </p>
      <p class="text-base mb-2 text-accent">
        Islamic Educational Platform - Books, Videos, Audio
      </p>
      <p class="text-sm md:text-base mb-10 opacity-75 font-ethiopic">
        እስላማዊ መድረኽ ኣስተምህሮ ብትግርኛ
      </p>

      <!-- Search Bar -->
      <div class="flex justify-center mb-12">
        <SearchBar size="lg" placeholder="ابحث في المحتوى... | ኣብ ትሕዝቶ ድለ..." />
      </div>

      <!-- Quick Navigation Cards -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {sections.map((section) => (
          <a
            href={section.href}
            class="group bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/20 transition-all hover:scale-105"
          >
            <div class="text-white/80 group-hover:text-accent transition-colors mb-3 flex justify-center" set:html={section.icon} />
            <h3 class="text-lg font-bold text-white font-amiri">{section.titleAr}</h3>
            <p class="text-sm text-accent">{section.titleEn}</p>
            <p class="text-xs text-white/70 font-ethiopic">{section.titleTi}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="stats-bar py-6">
    <div class="container">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {stats.map((stat) => (
          <div class="text-center text-white">
            <span class="block text-3xl md:text-4xl font-bold">{stat.count}+</span>
            <span class="block text-sm opacity-80">{stat.labelAr}</span>
            <span class="block text-xs opacity-60 font-ethiopic">{stat.labelTi}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Books -->
  <section class="py-16 bg-cream">
    <div class="container">
      <SectionTitle
        titleAr="أحدث الكتب"
        titleEn="Latest Books"
        titleTi="ሓደሽቲ መጻሕፍቲ"
        href="/books"
      />
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {featuredBooks.map((book) => (
          <BookCard {...book} />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Videos -->
  <section class="py-16 bg-white">
    <div class="container">
      <SectionTitle
        titleAr="أحدث الفيديوهات"
        titleEn="Latest Videos"
        titleTi="ሓደሽቲ ቪድዮታት"
        href="/videos"
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredVideos.map((video) => (
          <VideoCard {...video} />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Audio -->
  <section class="py-16 bg-cream">
    <div class="container">
      <SectionTitle
        titleAr="أحدث الصوتيات"
        titleEn="Latest Audio"
        titleTi="ሓደሽቲ ዝስማዕ"
        href="/audio"
      />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {featuredAudio.map((audio) => (
          <AudioCard {...audio} />
        ))}
      </div>
    </div>
  </section>

  <!-- Scholars History Teaser -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="card overflow-hidden">
          <div class="flex flex-col md:flex-row">
            <div class="md:w-1/3 bg-gradient-to-br from-primary to-primary-dark p-8 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-20 h-20 mx-auto mb-4 opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="text-4xl font-bold font-amiri">5</span>
                <p class="text-sm opacity-80">عالم موثق</p>
              </div>
            </div>
            <div class="md:w-2/3 p-8">
              <div class="trilingual-title mb-4">
                <h2 class="ar text-2xl font-bold text-text-dark font-amiri">سيرة علماء إريتريا</h2>
                <p class="en text-lg text-primary font-medium">History of Eritrean Scholars</p>
                <p class="ti text-base text-text-light font-ethiopic">ታሪኽ መሻይኽ ኤርትራ</p>
              </div>
              <p class="text-text-light mb-6 leading-relaxed">
                تعرف على العلماء المسلمين الذين أناروا إريتريا بعلمهم ودعوتهم عبر القرون.
              </p>
              <a href="/scholars" class="btn btn-primary inline-flex items-center gap-2">
                <span>اكتشف التاريخ</span>
                <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 hero-gradient text-white">
    <div class="container text-center">
      <div class="trilingual-title items-center mb-6">
        <h2 class="ar text-3xl font-bold text-white font-amiri">شارك في المنصة</h2>
        <p class="en text-xl text-accent font-semibold">Contribute to the Platform</p>
        <p class="ti text-lg text-white/80 font-ethiopic">ኣብ መድረኽ ተሳተፉ</p>
      </div>
      <p class="text-lg mb-8 opacity-90 max-w-xl mx-auto">
        هل لديك كتب أو تسجيلات أو معلومات عن علماء إريتريا؟ شاركها معنا!
      </p>
      <a href="/contact" class="btn btn-accent inline-flex items-center gap-2">
        <span>تواصل معنا</span>
        <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<script is:inline>
  // PDF.js Preview Renderer
  document.addEventListener('DOMContentLoaded', async () => {
    if (typeof pdfjsLib === 'undefined') {
      console.warn('PDF.js not loaded');
      return;
    }

    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

    const canvases = document.querySelectorAll('canvas[data-pdf-url]');

    for (const canvas of canvases) {
      const pdfUrl = canvas.getAttribute('data-pdf-url');
      const container = canvas.closest('.pdf-preview-container');

      try {
        const pdf = await pdfjsLib.getDocument(pdfUrl).promise;
        const page = await pdf.getPage(1);

        const containerWidth = canvas.parentElement?.clientWidth || 176;
        const containerHeight = canvas.parentElement?.clientHeight || 224;

        const viewport = page.getViewport({ scale: 1 });
        const scaleX = containerWidth / viewport.width;
        const scaleY = containerHeight / viewport.height;
        const scale = Math.min(scaleX, scaleY) * 1.5;

        const scaledViewport = page.getViewport({ scale });

        canvas.width = scaledViewport.width;
        canvas.height = scaledViewport.height;

        const ctx = canvas.getContext('2d');
        await page.render({
          canvasContext: ctx,
          viewport: scaledViewport
        }).promise;

        if (container) {
          container.classList.add('loaded');
        }
      } catch (error) {
        console.error('Error loading PDF preview:', pdfUrl, error);
      }
    }
  });
</script>

<style>
  .font-amiri {
    font-family: var(--font-amiri);
  }
  .font-ethiopic {
    font-family: var(--font-ethiopic);
  }
</style>
