---
const navItems = [
  { href: '/', labelAr: 'الرئيسية', labelEn: 'Home', labelTi: 'መበገሲ' },
  { href: '/books', labelAr: 'الكتب', labelEn: 'Books', labelTi: 'መጻሕፍቲ' },
  { href: '/videos', labelAr: 'الفيديوهات', labelEn: 'Videos', labelTi: 'ቪድዮታት' },
  { href: '/audio', labelAr: 'الصوتيات', labelEn: 'Audio', labelTi: 'ዝስማዕ' },
  { href: '/scholars', labelAr: 'سيرة العلماء', labelEn: 'Scholars', labelTi: 'ታሪኽ መሻይኽ' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex flex-col items-end">
        <span class="text-2xl font-bold text-primary font-amiri">المنصة الإسلامية</span>
        <span class="text-sm text-primary font-medium">Islamic Platform</span>
        <span class="text-xs text-primary-light font-ethiopic">ኢስላሚያ መድረኽ</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'group flex flex-col items-center transition-colors',
              currentPath === item.href
                ? 'text-primary'
                : 'text-text-dark hover:text-primary'
            ]}
          >
            <span class="text-sm font-semibold">{item.labelAr}</span>
            <span class="text-xs text-primary/80">{item.labelEn}</span>
            <span class="text-[10px] opacity-60 font-ethiopic">{item.labelTi}</span>
            {currentPath === item.href && (
              <span class="h-0.5 w-full bg-accent mt-1 rounded-full" />
            )}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-primary hover:bg-cream rounded-lg"
        aria-label="فتح القائمة"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav
      id="mobile-menu"
      class="hidden md:hidden pb-4 border-t border-cream-dark"
    >
      <div class="flex flex-col gap-2 pt-4">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'flex justify-between items-center px-4 py-3 rounded-lg transition-colors',
              currentPath === item.href
                ? 'bg-primary text-white'
                : 'hover:bg-cream'
            ]}
          >
            <div class="flex flex-col">
              <span class="text-base font-semibold">{item.labelAr}</span>
              <span class="text-xs opacity-80">{item.labelEn}</span>
            </div>
            <span class="text-sm opacity-70 font-ethiopic">{item.labelTi}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<style>
  .font-amiri {
    font-family: var(--font-amiri);
  }
  .font-ethiopic {
    font-family: var(--font-ethiopic);
  }
</style>
