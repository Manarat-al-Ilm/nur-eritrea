---
interface Props {
  slug: string;
  titleAr: string;
  titleTi?: string;
  scholarName: string;
  category: string;
  duration: string;
  audioUrl?: string;
  youtubeId?: string;
  description?: string;
}

const { slug, titleAr, titleTi, scholarName, category, duration, audioUrl, youtubeId, description } = Astro.props;

const categoryColors: Record<string, string> = {
  'محاضرات': 'bg-primary',
  'دروس': 'bg-accent',
  'خطب': 'bg-emerald-600',
  'تلاوات': 'bg-purple-600',
  'أذكار': 'bg-rose-600',
};

const badgeColor = categoryColors[category] || 'bg-primary';
---

<div class="card p-5 group">
  <div class="flex items-start gap-4">
    <!-- Audio Icon -->
    <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
      <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
      </svg>
    </div>

    <!-- Audio Info -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-2">
        <span class={`badge ${badgeColor} text-white text-xs`}>{category}</span>
        <span class="text-xs text-text-light flex items-center gap-1">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {duration}
        </span>
      </div>

      <div class="bilingual-title mb-2">
        <h3 class="ar text-base font-bold text-text-dark leading-relaxed group-hover:text-primary transition-colors truncate">
          {titleAr}
        </h3>
        {titleTi && <p class="ti text-xs text-text-light truncate">{titleTi}</p>}
      </div>

      <p class="text-sm text-text-light flex items-center gap-1 mb-3">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        {scholarName}
      </p>

      {description && (
        <p class="text-xs text-text-light line-clamp-2 mb-3">{description}</p>
      )}

      <!-- Play Controls -->
      <div class="flex items-center gap-2">
        {youtubeId ? (
          <a
            href={`https://www.youtube.com/watch?v=${youtubeId}`}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary text-xs py-1.5 px-3 inline-flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <span>استمع</span>
          </a>
        ) : audioUrl && (
          <audio controls class="h-8 w-full max-w-[200px]">
            <source src={audioUrl} type="audio/mpeg" />
          </audio>
        )}

        {audioUrl && (
          <a
            href={audioUrl}
            download
            class="btn btn-outline text-xs py-1.5 px-3 inline-flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            <span>تحميل</span>
          </a>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
