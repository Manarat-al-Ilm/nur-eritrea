---
interface Props {
  slug: string;
  titleAr: string;
  titleTi?: string;
  author: string;
  translator?: string;
  category: string;
  description: string;
  pdfUrl: string;
  coverImage?: string;
  pages?: number;
}

const { slug, titleAr, titleTi, author, translator, category, description, pdfUrl, coverImage, pages } = Astro.props;

const categoryColors: Record<string, string> = {
  'العقيدة': 'bg-rose-600',
  'الفقه': 'bg-primary',
  'الحديث': 'bg-accent',
  'التفسير': 'bg-emerald-600',
  'السيرة': 'bg-purple-600',
  'التزكية': 'bg-cyan-600',
};

const badgeColor = categoryColors[category] || 'bg-primary';
const canvasId = `pdf-preview-${slug}`;
---

<div class="card overflow-hidden group">
  <div class="flex flex-col sm:flex-row">
    <!-- Book Cover / PDF Preview -->
    <div class="sm:w-44 flex-shrink-0 bg-gray-100">
      {coverImage ? (
        <img
          src={coverImage}
          alt={titleAr}
          class="w-full h-56 sm:h-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="pdf-preview-container w-full h-56 sm:h-full relative">
          <canvas
            id={canvasId}
            class="w-full h-full object-contain"
            data-pdf-url={pdfUrl}
          ></canvas>
          <!-- Loading state -->
          <div class="pdf-loading absolute inset-0 flex items-center justify-center bg-gradient-to-br from-primary to-primary-dark">
            <div class="text-center text-white">
              <svg class="w-8 h-8 mx-auto mb-2 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <span class="text-xs font-amiri">جاري التحميل...</span>
            </div>
          </div>
        </div>
      )}
    </div>

    <!-- Book Info -->
    <div class="flex-1 p-5">
      <div class="flex items-start justify-between gap-3 mb-3">
        <span class={`badge ${badgeColor} text-white text-xs`}>{category}</span>
        {pages && (
          <span class="text-xs text-text-light flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            {pages} صفحة
          </span>
        )}
      </div>

      <div class="bilingual-title mb-2">
        <h3 class="ar text-lg font-bold text-text-dark leading-relaxed group-hover:text-primary transition-colors">
          {titleAr}
        </h3>
        {titleTi && <p class="ti text-sm text-text-light">{titleTi}</p>}
      </div>

      <div class="text-sm text-text-light mb-2 space-y-1">
        <p class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {author}
        </p>
        {translator && (
          <p class="flex items-center gap-1 text-xs text-accent">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
            </svg>
            {translator}
          </p>
        )}
      </div>

      <p class="text-sm text-text-light line-clamp-2 mb-4">{description}</p>

      <!-- Download Button -->
      <a
        href={pdfUrl}
        download
        class="btn btn-primary text-sm py-2 px-4 inline-flex items-center gap-2"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        <span>تحميل PDF</span>
        <span class="font-ethiopic text-xs opacity-80">PDF ኣውርድ</span>
      </a>
    </div>
  </div>
</div>

<style>
  .font-amiri {
    font-family: var(--font-amiri);
  }
  .font-ethiopic {
    font-family: var(--font-ethiopic);
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .pdf-preview-container canvas {
    display: block;
  }
  .pdf-preview-container.loaded .pdf-loading {
    display: none;
  }
</style>
